<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardViewTeam"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewBadge"
            android:layout_width="130dp"
            android:layout_height="0dp"
            android:padding="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textViewName"
            app:layout_constraintStart_toEndOf="@id/imageViewBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageViewBadge"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            tools:text="Liga de españa" />

        <TextView
            app:layout_constraintStart_toEndOf="@id/imageViewBadge"
            app:layout_constraintTop_toBottomOf="@id/textViewName"
            android:id="@+id/textViewStadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imageViewBadge"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="Estadio maracaná" />

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>